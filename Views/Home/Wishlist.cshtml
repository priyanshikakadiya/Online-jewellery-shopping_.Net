            @model List<Product>

<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
</head>
<body>
    <h1>Product List</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><img src="@product.ImageUrl" alt="@product.Name" width="100" height="100"></td>
                </tr>
            }

            <form asp-action="DeleteAll" method="post">
                <button type="submit">Empty Wishlist</button>
            </form>

            
        </tbody>

        
    </table>
</body>
</html>
