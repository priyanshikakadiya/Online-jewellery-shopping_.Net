            }


        button[type="submit"] {
            display: block;
            width: 100%;
            padding: 5px 10px;
            margin-top: 10px;
            background-color: #cc0d0d;
            color: #fff;
            border: none;
            border-radius: 15px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #000;
            }


        .image-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 10px;
        }

            .image-grid img {
                width: 100%;
                height: auto;
            }
